load("@batfish//skylark:pmd_test.bzl", "pmd_test")
load("@rules_java//java:defs.bzl", "java_library")

package(default_visibility = ["//visibility:public"])

java_library(
    name = "arista_base",
    srcs = [
        "AristaBaseLexer.java",
        "AristaBaseParser.java",
    ],
    deps = [
        "//projects/common:parser_common",
        "@maven//:com_google_code_findbugs_jsr305",
        "@maven//:com_google_guava_guava",
        "@maven//:org_antlr_antlr4_runtime",
    ],
)

java_library(
    name = "grammar",
    srcs = glob(
        ["*.java"],
        exclude = [
            "AristaBaseLexer.java",
            "AristaBaseParser.java",
        ],
    ),
    deps = [
        "//projects/batfish/src/main/antlr4/org/batfish/vendor/arista/grammar",
        "//projects/batfish/src/main/java/org/batfish/vendor/arista/representation",
        "//projects/common",
        "@maven//:com_google_code_findbugs_jsr305",
        "@maven//:com_google_guava_guava",
        "@maven//:org_antlr_antlr4_runtime",
    ],
)

pmd_test(
    name = "pmd",
    lib = ":grammar",
)

pmd_test(
    name = "pmd_base",
    lib = ":arista_base",
)
