config system global
    set hostname "fortios-bfd-mixed"
end

# Mix of BFD enabled and disabled neighbors/routes
config system interface
    edit "port1"
        set vdom "root"
        set ip 10.0.0.1 255.255.255.0
        set type physical
    next
    edit "port2"
        set vdom "root"
        set ip 10.0.1.1 255.255.255.0
        set type physical
    next
end

config router bgp
    set as 65001
    config neighbor
        edit "10.0.0.1"
            set remote-as 65002
            set bfd enable
        next
        edit "10.0.0.2"
            set remote-as 65003
        next
        edit "10.0.0.3"
            set remote-as 65004
            set bfd disable
        next
    end
end

config router static
    edit 1
        set device "port1"
        set gateway 10.0.0.254
        set bfd enable
    next
    edit 2
        set device "port1"
        set gateway 10.0.1.254
    next
    edit 3
        set device "port2"
        set gateway 10.0.2.254
        set bfd disable
    next
end
