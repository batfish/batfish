config system global
    set hostname "fortios-bfd-test"
end

config system bfd
    set interval 100
    set min-rx 100
    set min-tx 100
    set multiplier 5
end

config system interface
    edit "port1"
        set vdom "root"
        set ip 10.0.0.1 255.255.255.0
        set type physical
    next
    edit "port2"
        set vdom "root"
        set ip 10.0.1.1 255.255.255.0
        set type physical
    next
end

config router bgp
    set as 65001
    set router-id 1.1.1.1
    config neighbor
        edit "10.0.0.2"
            set remote-as 65002
            set bfd enable
        next
        edit "10.0.1.2"
            set remote-as 65003
            set bfd disable
        next
    end
end

config router static
    edit 1
        set device "port1"
        set gateway 10.0.0.254
        set bfd enable
    next
    edit 2
        set device "port2"
        set gateway 10.0.1.254
        set bfd disable
    next
end
