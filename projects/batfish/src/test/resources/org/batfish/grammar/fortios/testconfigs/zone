config system global
    set hostname "zone"
end
config system interface
    edit "port1"
        set vdom "root"
        set ip 192.168.10.1 255.255.255.0
        set type physical
    next
    edit "port2"
        set vdom "root"
        set ip 192.168.20.1 255.255.255.0
        set type physical
    next
    edit "port3"
        set vdom "root"
        set ip 192.168.30.1 255.255.255.0
        set type physical
    next
    edit "port4"
        set vdom "root"
        set ip 192.168.40.1 255.255.255.0
        set type physical
    next
end
config system zone
    edit "zone1"
        set interface port1
        set interface port2
        append interface port1
    next
    edit "zone2"
        set description "zone2 description"
        set intrazone deny
        select interface port2
        select interface port3
    next
    edit "longest possible valid name for zon"
        set intrazone allow
        set interface port4
    next
    #edit "zone3"
    #    set intrazone allow
        # TODO is this valid?
    #next
end
