node2
# This file describes the network interfaces
auto lo
iface lo inet loopback

auto swp1
iface swp1

auto swp2
iface swp2
  address 2.2.2.1/31

auto swp3
iface swp3
  address 3.3.3.1/24

auto swp4
iface swp4
  address 4.4.4.1/31
  address 4.4.5.1/24

auto swp5
iface swp5

auto swp6
iface swp6

auto swp7
iface swp7

auto swp8
iface swp8
  address 8.8.8.1/31

auto swp9
iface swp9
  address 9.9.9.1/24

# ports.conf --
frr version
frr defaults datacenter
!
interface swp1
 ip address 10.1.1.1/24
!
router bgp 2
 bgp router-id 2.2.2.2
 neighbor swp1 interface remote-as external
 neighbor swp2 interface remote-as external
 neighbor swp3 interface remote-as external
 neighbor swp4 interface remote-as external
 neighbor swp5 interface remote-as external
 neighbor swp6 interface remote-as external
 neighbor swp7 interface remote-as external
 neighbor 8.8.8.0 remote-as external
 neighbor 9.9.9.0 remote-as external
!
end

