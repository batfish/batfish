#
set system host-name juniper-isis
#
set interfaces lo0 unit 0 family inet address 1.1.1.1/32 
set interfaces lo0 unit 0 family iso address 12.1234.1234.1234.1234.00 
#
set interfaces ge-0/0/0 unit 0 family inet address 10.0.0.0/24 
set interfaces ge-0/0/0 unit 0 family iso address 12.1234.1234.1234.1234.01 
#
protocols isis interface ge-0/0/0.0 bfd-liveness-detection minimum-interval 250
protocols isis interface ge-0/0/0.0 bfd-liveness-detection multiplier 3
# "hello there"
protocols isis interface ge-0/0/0.0 level 2 hello-authentication-key "$9$tc4xpORrlMxNbhSdsY2oan/CAu1SyKWX-tu"
protocols isis interface ge-0/0/0.0 level 2 hello-authentication-type md5
protocols isis interface ge-0/0/0.0 level 2 hello-interval 1
protocols isis interface ge-0/0/0.0 level 2 hold-time 3
protocols isis interface ge-0/0/0.0 level 2 metric 5
protocols isis interface ge-0/0/0.0 point-to-point
#
protocols isis interface lo0.0 passive
#
protocols isis level 1 disable
protocols isis level 2 wide-metrics-only
protocols isis overload timeout 360
protocols isis reference-bandwidth 100g
#
