policy {
  panorama {
  }
}
config {
  devices {
    localhost.localdomain {
      network {
        interface {
          ethernet {
            ethernet1/1 {
              layer3 {
                units {
                  ethernet1/1.1 {
                    ip {
                      1.1.1.3/24;
                    }
                  }
                }
              }
            }
            ethernet1/2 {
              layer3 {
                units {
                  ethernet1/2.1 {
                    ip {
                      1.2.1.3/24;
                    }
                  }
                  ethernet1/2.2 {
                    ip {
                      1.2.2.3/24;
                    }
                  }
                }
              }
            }
          }
        }
        virtual-router {
          vr1 {
            interface [ ethernet1/1.1 ethernet1/2.1 ethernet1/2.2];
          }
        }
      }
      deviceconfig {
        system {
          hostname source-nat;
        }
      }
      vsys {
        vsys1 {
          address {
            SOURCE_ADDR {
              ip-netmask 1.1.1.2/32;
            }
            SERVER_NEW_ADDR {
              ip-netmask 1.1.1.99/32;
            }
          }
          rulebase {
            nat {
              rules {
                SOURCE_NAT_NAME {
                  source-translation {
                    dynamic-ip-and-port {
                      translated-address SERVER_NEW_ADDR;
                    }
                  }
                  to OUTSIDE;
                  from INSIDE;
                  source SOURCE_ADDR;
                  destination any;
                }
              }
            }
            security {
              rules {
                PERMIT_ALL {
                  to any;
                  from any;
                  source any;
                  destination any;
                  application any;
                  service any;
                  action allow;
                }
              }
            }
          }
          zone {
            INSIDE {
              network {
                layer3 [ ethernet1/1.1];
              }
            }
            OUTSIDE {
              network {
                layer3 [ ethernet1/2.1 ethernet1/2.2];
              }
            }
          }
        }
      }
    }
  }
}
