set deviceconfig system hostname address-group-comprehensive

# Address objects with tags for dynamic filtering
set address server1 ip-netmask 10.1.1.1
set address server1 tag [ web production ]
set address server2 ip-netmask 10.1.1.2
set address server2 tag [ web staging ]
set address server3 ip-netmask 10.1.1.3
set address server3 tag [ db production ]
set address server4 ip-netmask 10.1.1.4
set address server4 tag db

# IPv6 address objects with tags
set address ipv6-server1 ip-netmask 2001:db8::1
set address ipv6-server1 tag ipv6

# Dynamic address group with complex filter
set address-group prod-web-servers dynamic filter "'production' and 'web'"
set address-group prod-web-servers description "Production web servers"

# Dynamic address group matching IPv6 objects
set address-group ipv6-servers dynamic filter ipv6

# Static address group
set address-group all-servers static [ server1 server2 server3 server4 ]

# Hybrid group - initially dynamic, converted to static
set address-group hybrid-group dynamic filter "'web'"
set address-group hybrid-group static [ server1 ]

# Nested address groups
set address-group web-servers static [ server1 server2 ]
set address-group all-web-servers static [ web-servers ]

# Dynamic group matching nested groups with tags
set address-group tagged-groups dynamic filter "'production'"
