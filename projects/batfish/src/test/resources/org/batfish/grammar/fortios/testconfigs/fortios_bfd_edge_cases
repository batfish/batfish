config system global
    set hostname "fortios-bfd-edge-cases"
end

# Test 1: Only some BFD parameters set (should use defaults for others)
config system bfd
    set interval 200
    # min-rx, min-tx, multiplier not set - should use defaults
end

config system interface
    edit "port1"
        set vdom "root"
        set ip 10.0.0.1 255.255.255.0
        set type physical
    next
end

config router bgp
    set as 65001
    config neighbor
        edit "10.0.0.1"
            set remote-as 65002
            # bfd not set - should default to false
        next
    end
end

config router static
    edit 1
        set device "port1"
        set gateway 10.0.0.1
        # bfd not set - should default to false
    next
end
