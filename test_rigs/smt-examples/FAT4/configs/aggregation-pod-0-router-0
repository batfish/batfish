interface Loopback0
  ip address 70.0.4.0/32
!
interface Serial0
  ip address 10.0.16.1/31
!
interface Serial1
  ip address 10.0.20.1/31
!
interface Serial2
  ip address 10.0.0.0/31
!
interface Serial3
  ip address 10.0.1.0/31
!
router bgp 4
  neighbor 10.0.16.0 remote-as 0
  neighbor 10.0.20.0 remote-as 1
  neighbor 10.0.0.1 remote-as 6
  neighbor 10.0.1.1 remote-as 7
!
